<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha"
            android:textColor="@android:color/white"
            android:paddingLeft="2dp"
            android:paddingRight="1dp"
            android:textSize="@dimen/TextsizeBottomMenu" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblTemperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lblFecha"
                    android:text="Fecha"
                    android:textColor="@android:color/white"
                    android:paddingLeft="2dp"
                    android:paddingRight="1dp"
                    android:textSize="@dimen/TextsizeBottomMenu" />

                <TextView
                    android:id="@+id/lblPH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="50dp"
                    android:text="Fecha"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/TextsizeBottomMenu" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblturbidez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtTemp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/txtTemp"
                    android:text="Fecha"
                    android:textColor="@android:color/white"
                    android:paddingLeft="2dp"
                    android:paddingRight="1dp"
                    android:textSize="@dimen/TextsizeBottomMenu" />

                <TextView
                    android:id="@+id/txtTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lblTemperatura"
                    android:layout_alignBottom="@+id/lblTemperatura"
                    android:layout_toEndOf="@+id/lblTemperatura"
                    android:layout_toRightOf="@+id/lblTemperatura"
                    android:paddingLeft="50dp"
                    android:text="Fecha"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/TextsizeBottomMenu" />
            </TableRow>

        </TableLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewTrashs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
         />

    </android.support.v7.widget.CardView>